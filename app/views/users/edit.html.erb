  <!--================Single Product Area =================-->
  <% if user_signed_in? %>
    <%= form_for @user, url: user_path(@user.id), method: :put do |f| %> 
        <div class="product_image_area section_padding">
          <div class="container">
            <div class="row s_product_inner justify-content-between">
              <div class="col-lg-6 col-xl-6">
                <div class="avatar-upload">
                  <div class="avatar-edit">
                    <%= f.file_field :img %>
                    <label for="user_img"></label>
                  </div>
                  <div class="avatar-preview">
                      <div id="imagePreview" style="background-image: url(<%= current_user.img? ? current_user.img.url : "http://file.vforum.vn/hinh/2018/02/hinh-cho-cuoi-deu-cho-de-thuong-12.jpg"%>);">
                      </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6 col-xl-6">
                <div class="s_product_text">
                   
                    <div class="col-md-12 form-group">
                      <label><%=t("users.edit.full_name")%></label>   
                      <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>   
                    </div>
                    <div class="col-md-12 form-group">
                      <label>Nickname</label>   
                      <%= f.text_field :nickname, class: "form-control", placeholder: "Enter nickname"%>   
                    </div>
                    <div class="col-md-12 form-group">
                      <label><%=t("users.index.gender")%></label>   
                      <%= f.select(:gender, ['male', 'female'], {:selected => current_user.gender}, { :class => 'form-control'}) %>              
                    </div>
                    <div class="col-md-12 form-group">
                      <label><%=t("users.index.birthday")%></label>   
                      <%= f.date_field :birthday, class: "form-control"%>   
                    </div>
                    <div class="col-md-6 form-group col-md-offset-3">
                      <button type="submit" value="submit" class="btn_3"><%=t("users.edit.update_profile")%></button>
                    </div>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    <%end%>
  <!--================End Single Product Area =================-->
