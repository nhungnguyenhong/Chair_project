<section class="client_logo padding_bottom ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h2><%=t("static_pages.home.our_brands")%></h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-lg-12">
                <% @brands.each do |brand| %>
                    <div class="single_client_logo">
                        <%= link_to (image_tag brand.img, width: 125), chairs_path(brand: brand.id), method: :get %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>

