  $(function(){
    $( ".commit" ).click(function() {
      var id = $(this).attr('id')
      $.ajax({
        method: "post",
        url: "/order_items",
        data: {'chair_id': id, 'quantity': 1},
        success: function (res) {
          alert('Add to cart success!');
        },
      });
    });
  })
</script>
