

<!-- banner part start-->
<section class="banner_part feature_part padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h3><%=t("static_pages.home.preamble")%></h3>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            <% @categories.each do |category| %>
                <div class="col-lg-6 col-sm-6">
                    <div class="single_feature_post_text">
                        <p><%= category.description %></p>
                        <h3><%= category.name %></h3>
                        <a href="<%= chairs_path(category: category.id) %>" class="feature_btn" method="GET">EXPLORE NOW <i class="fas fa-play"></i></a>
                        <%= image_tag category.img, width: '65%' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>

<!-- product_list start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2><%=t("static_pages.home.list_chair")%></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="product_list_slider owl-carousel">
                    <div class="single_product_list_slider">
                        <div class="row align-items-center justify-content-between">
                            <% @list_chair.each_with_index do |chair| %>
                                <div class="col-lg-3 col-sm-6">
                                    <div class="single_product_item">
                                        <div style="width: 262.5px"><%= image_tag chair.img %></div>
                                        <div class="single_product_text">
                                            <h4><%= link_to chair.name, chair_path(chair.id), {:style=>'opacity:1;color:black;visibility: visible'}%> </h4>
                                            <b class="text-danger">$<%= chair.price %></b>
                                            <% if chair.quantity >0 %>
                                                <a href="javascript:;"  class="add_cart commit" id ="<%=chair.id%>">+ <%=t("add_to_cart")%></a>
                                            <%else%>
                                                <h3 align="left" class="text-danger"><%=t("sold_out")%></h3>
                                            <%end%>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div style = "text-align:center">
                <%= link_to t("static_pages.home.see_more"), chairs_path, class: "genric-btn info-border circle e-large", method: :get %>
            </div>
        </div>
    </div>
</section>
